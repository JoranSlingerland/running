{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "yarn: dev (frontend)",
      "command": "yarn dev --filter=frontend",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["yarn watch"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "yarn install",
      "command": "yarn install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "type": "shell",
      "label": "run: Comos emulator",
      "command": "tasklist | findstr /I Microsoft.Azure.Cosmos >nul || Microsoft.Azure.Cosmos.Emulator.exe /AllowNetworkAccess /Key=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "type": "shell",
      "label": "docker: start dev environment",
      "command": "docker-compose -f docker-compose-dev.yml up",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "isBackground": true
    },
    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": ["yarn watch", "azurite"],
      "options": {
        "cwd": "${workspaceFolder}/apps\\backend"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "yarn watch",
      "type": "shell",
      "command": "yarn watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "watch",
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "line": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".* - Starting compilation in watch mode...",
          "endsPattern": ".* - Found \\d+ errors?\\. Watching for file changes\\."
        }
      },
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["yarn install"]
    },
    {
      "label": "azurite",
      "type": "shell",
      "command": "azurite --location ./.azurite",
      "isBackground": true,
      "problemMatcher": {
        "owner": "azurite",
        "pattern": [
          {
            "regexp": "Azurite Blob service is successfully listening at http://[0-9.]+:10000",
            "file": 1,
            "line": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Azurite Blob service is starting",
          "endsPattern": "Azurite Blob service is successfully listening"
        }
      },
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
