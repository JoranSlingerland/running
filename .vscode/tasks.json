{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "yarn: dev (frontend)",
      "command": "yarn dev --filter=frontend",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["yarn watch"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "yarn: dev (backend)",
      "command": "yarn dev --filter=backend",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "yarn install",
      "command": "yarn install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "type": "shell",
      "label": "docker: start dev environment",
      "command": "docker-compose -f docker-compose-dev.yml up",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "yarn watch",
      "type": "shell",
      "command": "yarn watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "watch",
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "line": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".* - Starting compilation in watch mode...",
          "endsPattern": ".* - Found \\d+ errors?\\. Watching for file changes\\."
        }
      },
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["yarn install"]
    }
  ]
}
