{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for the application",
  "scripts": {
    "build": "tsc",
    "dev": "func start",
    "lint": "npx eslint . --ext .ts --ignore-pattern 'node_modules/*'",
    "fix": "npx eslint . --ext .ts --fix --ignore-pattern 'node_modules/*'",
    "ts-coverage": "typescript-coverage-report --threshold 100",
    "watch": "tsc -w",
    "prestart": "yarn run build",
    "start": "func start",
    "preinstall": "npx only-allow yarn"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@repo/cosmosdb": "*",
    "@repo/jwt": "*",
    "@repo/queue-helpers": "*",
    "@repo/strava": "*",
    "durable-functions": "3.0.0-alpha.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/types": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.x"
  },
  "main": "dist/app.js"
}
