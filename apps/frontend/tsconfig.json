{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@elements/*": ["components/elements/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@lib/*": ["components/lib/*"],
      "@modules/*": ["components/modules/*"],
      "@services/*": ["lib/services/*"],
      "@ui/*": ["components/ui/*"],
      "@utils/*": ["lib/utils/*"],
      "@pages/*": ["pages/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_app.tsx", "tailwind.config.ts"],
  "exclude": ["node_modules"]
}