{
  "name": "running-repo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:frontend": "turbo build --filter=frontend",
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=frontend",
    "lint": "turbo lint",
    "lint:frontend": "turbo lint --filter=frontend",
    "fix": "turbo fix",
    "fix:frontend": "turbo fix --filter=frontend",
    "preinstall": "npx only-allow yarn"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@repo/eslint-config": "*",
    "turbo": "^1.12.2",
    "prettier": "^3"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": "^18.17"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  }
}
